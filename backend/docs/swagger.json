                        }
                    }
                }
            },
            "put": {
                "description": "Send edited file to server",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "files"
                ],
                "summary": "Edit file",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Filename to save",
                        "name": "filename",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "file",
                        "description": "File to save",
                        "name": "file",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Edit response",
